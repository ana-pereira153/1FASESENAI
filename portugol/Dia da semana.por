programa {
  funcao inicio() {
    inteiro dia
escreva("Digite um número de 1 a 7:")
leia(dia)

  se(dia == 1){
    escreva("Domingo")
  }senao se(dia == 2){
    escreva("segunda")
  }senao se(dia ==3){
    escreva("terça")
  }senao se(dia ==4){
    escreva("Quarta")
  }senao se(dia ==5){
    escreva("Quinta")
  }senao se(dia ==6){
    escreva("sexta-feira")
  }senao se(dia ==7){
    escreva("Sabado")
  } 
  }
}
